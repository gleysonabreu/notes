{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": 0,
        "import/no-unresolved": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never", 
              "tsx": "never"
            }
          ],
          "import/prefer-default-export": "off"
    },
    "settings": {
        "import/resolver":{
            "node": {
                "extensions": [".ts", ".tsx"]
            }
        }
    }
}
